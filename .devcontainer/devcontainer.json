// For format details, see https://aka.ms/vscode-remote/devcontainer.json or this file's README at:
// https://github.com/microsoft/vscode-dev-containers/tree/v0.134.1/containers/docker-existing-dockerfile
{
	"name": "ros2_dev_container",
	// Sets the run context to one level up instead of the .devcontainer folder.
	"context": "..",
	// Update the 'dockerFile' property if you aren't using the standard 'Dockerfile' filename.
	"dockerFile": "../Dockerfile",
	"remoteUser": "local",
	// Set *default* container specific settings.json values on container create.
	"settings": {
		"python.pythonPath": "/bin/python3",
	},
	// Add the IDs of extensions you want installed when the container is created.
	"extensions": [
		"ms-python.python",
	],
	// Uncomment the next line to run commands after the container is created - for example installing curl.
	// Workspace mount
	"workspaceMount": "source=${localWorkspaceFolder},target=/home/local/ros_ws/src/multi_lidar_calibrator,type=bind,consistency=delegated",
	// Define workspace
	"workspaceFolder": "/ros_ws",
	"runArgs": [
		"-e", "DISPLAY=${env:DISPLAY}",
        "-v", "/tmp/.X11-unix:/tmp/.X11-unix",
		"-e", "XAUTHORITY=/root/.Xauthority",
		"-v", "${localEnv:HOME}/.Xauthority:/root/.Xauthority:rw",
        "-v", "/etc/localtime:/etc/localtime:ro",
        "-v", "/dev/input:/dev/input",
		"-e", "ROS_DOMAIN_ID=${env:ROS_DOMAIN_ID}",
		"-v", "/home/dominik/Documents/datasets",
		"--network=host",
		"--cap-add=SYS_PTRACE",
		"--security-opt=seccomp:unconfined",
		"--security-opt=apparmor:unconfined",
		"--privileged"
	],
	"containerEnv": {
		"LIBGL_ALWAYS_SOFTWARE": "1"
	}
}

